---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import headshot from '../assets/headshot.jpg';

const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => {
  const yearA = parseInt(a.data.date.split('-').pop());
  const yearB = parseInt(b.data.date.split('-').pop());
  return yearB - yearA;
});
---

<Layout title="Rebecca May Ristow | Theatre Artist & Administrator">
  <div class="relative">
    <div class="mx-auto px-8 md:max-w-7xl">

      <!-- Hero Section -->
      <section class="py-12 md:py-20">
        <h1 class="font-heading text-5xl md:text-7xl font-light tracking-wide mb-12">Rebecca May Ristow</h1>
        <div class="flex flex-col md:flex-row gap-10 md:gap-16 items-start">
          <div class="w-full md:w-1/3 shrink-0">
            <Image src={headshot} alt="Rebecca May Ristow" width={400} class="w-full h-auto" />
            <p class="text-xs text-zinc-400 mt-2">Photo: Daniel Gallipoli</p>
          </div>
          <div class="flex-1">
            <h2 class="font-heading text-2xl md:text-3xl font-light tracking-wide mb-6">Theatre Artist & Administrator</h2>
            <div class="space-y-4 text-zinc-700 leading-relaxed">
              <p>Hello! I'm Rebecca, the Assistant Manager of Production at The Bushnell in Hartford, CT. Though my undergraduate studies focused on directing, my passions align strongly with arts administration and community engagement.</p>
              <p>I received my MBA at University of Hartford, where I studied Marketing. I hope to use this degree to further my work uplifting non-profits in the arts sector.</p>
              <p>I have various theatre experiences under my belt including directing and education, as well as regionally recognized dramaturgical work. Recently, I worked as an assistant director for Hartford Stage as well as TheaterWorks Hartford. I am always looking for more work in the performing arts and community engagement.</p>
            </div>
            <div class="mt-8">
              <a href="/portfolio" class="inline-block border border-zinc-900 px-6 py-3 text-sm tracking-wide hover:bg-zinc-900 hover:text-white transition-colors">View Portfolio</a>
            </div>
          </div>
        </div>
      </section>

      <!-- Portfolio Preview Section -->
      <section class="py-12 md:py-20 border-t border-zinc-200">
        <h2 class="font-heading text-3xl md:text-4xl font-light tracking-wide text-center mb-4">My Project Portfolio</h2>
        <div class="text-center mb-4">
          <h3 class="font-heading text-lg font-light tracking-wide">Explore My Work</h3>
        </div>
        <p class="text-center text-zinc-600 mb-12 max-w-lg mx-auto">Head to my portfolio to see a selection of my theatrical and film projects!</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project) => (
            <Card slug={project.slug} title={project.data.title} image={project.data.image} tags={project.data.tag} />
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/portfolio" class="inline-block border border-zinc-900 px-6 py-3 text-sm tracking-wide hover:bg-zinc-900 hover:text-white transition-colors">View More Projects</a>
        </div>
      </section>

    </div>
  </div>
</Layout>
