---
import { getEntry } from 'astro:content';

const general = await getEntry('settings','general');
const footer = await getEntry('settings','footer');
---

<footer class="block relative bg-zinc-100 w-full text-center py-20">
  <div class="mx-auto px-8 md:max-w-7xl">
    <p class="mb-6">
      <a href="mailto:rebeccamristow@gmail.com" class="no-underline text-zinc-700 hover:text-zinc-900 transition-colors">rebeccamristow@gmail.com</a>
    </p>
    <div class="flex justify-center gap-8 mb-8">
      {footer.data.socials.map(social=><a href={social.link} class="no-underline relative inline-block text-zinc-500 hover:text-zinc-900 transition-colors" title={social.name} aria-label={social.name} rel="noopener" target={social.target}>
        <span set:html={social.name}></span>
      </a>)}
    </div>
    <p class="m-0 text-sm opacity-50">
      <span>&copy;&nbsp;</span>
      <span>{general.data.title}&nbsp;</span>
      <span set:html={new Date().getFullYear()}></span>
      <span>. All rights reserved.</span>
    </p>
  </div>
</footer>
